<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:maxWidth="270dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorGreyText"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:maxWidth="270dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvNumber"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvElements"
            android:layout_width="wrap_content"
            android:maxWidth="270dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvNumber"
            android:textColor="@color/colorBlueText"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvMeans"
            android:layout_width="wrap_content"
            android:maxWidth="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvElements"
            android:layout_alignLeft="@+id/tvElements"
            android:textColor="@color/colorBrownText"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/tvExamples"
            android:layout_width="wrap_content"
            android:maxWidth="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMeans"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorSteelText"
            android:textSize="15sp"
            android:textStyle="italic" />
    </LinearLayout>

</RelativeLayout>